{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<div id="Banner-{{ section.id }}" class="banner-com-link">

  <h1>settings.settings.image_01 = {{ settings.settings.image_01 }}</h1>
  
  <img
    loading="lazy"
    src="{{ section.settings.image_01 | img_url: '1600x' }}"
    width="100"
    height="100"
  />
  <img
    loading="lazy"
    src="{{ settings.image_02 | image_url: '1600x' }}"
    width="100"
    height="100"
  />
  <img
    loading="lazy"
    src="{{ settings.image_03 | image_url: '1600x' }}"
    width="100"
    height="100"
  />  
  <img
    loading="lazy"
    src="{{ settings.image_04 | image_url: '1600x' }}"
    width="100"
    height="100"
  />  

</div>


{% comment %} 
// Settings
Message: {{ settings.message }}
// Section
Message: {{ section.settings.message }}
// Block
Message: {{ block.settings.message }}
{% endcomment %}


{% schema %}
{
  "name": "Auto Slider",
  "tag": "section",
  "class": "slideshow",
  "settings": [
    {
      "type": "text",
      "id": "txt_alt_text",
      "label": "Descrição Alts Text"
    },
    {
      "type": "paragraph",
      "content": "Alt Text é o texto que descreve as imagens."
    },
    {
      "type": "image_picker",
      "id": "image_01",
      "label": "Imagem 1"
    },
    {
      "type": "image_picker",
      "id": "image_02",
      "label": "Imagem 2"
    },
    {
      "type": "image_picker",
      "id": "image_03",
      "label": "Imagem 3"
    },
    {
      "type": "image_picker",
      "id": "image_04",
      "label": "Imagem 4"
    }
  ],
  "presets": [
    {
      "name": "Auto Slider"
    }
  ]
}
{% endschema %}