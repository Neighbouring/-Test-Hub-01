{% schema %}
{
  "name": "Auto Slider",
  "tag": "section",
  "class": "slideshow",
  "settings": [
    {
      "type": "text",
      "id": "txt_alt_text",
      "label": "Descrição das imagens."
    },
    {
      "type": "paragraph",
      "content": "Descreva de forma resumida sobre as imagens exibidas neste bloco."
    },
    {
      "type": "checkbox",
      "id": "exibir_imagens",
      "default": false,
      "label": "Desabilitar link de produtos."
    },
    {
      "type": "product",
      "id": "product_01",
      "label": "Produto 1"
    },
    {
      "type": "product",
      "id": "product_02",
      "label": "Produto 2"
    },
    {
      "type": "product",
      "id": "product_03",
      "label": "Produto 3"
    },
    {
      "type": "product",
      "id": "product_04",
      "label": "Produto 4"
    },
    {
      "type": "image_picker",
      "id": "image_01",
      "label": "Imagem 1"
    },
    {
      "type": "image_picker",
      "id": "image_02",
      "label": "Imagem 2"
    },
    {
      "type": "image_picker",
      "id": "image_03",
      "label": "Imagem 3"
    },
    {
      "type": "image_picker",
      "id": "image_04",
      "label": "Imagem 4"
    }
  ],
  "presets": [
    {
      "name": "Auto Slider"
    }
  ]
}
{% endschema %}